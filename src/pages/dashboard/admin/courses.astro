---

<DashboardLayout
  metadata={{ title: 'Admin â€” Cursos', description: 'Panel de administraciÃ³n' }}
>
  <AdminNavigation
    activeTab="courses"
    isSudo={isSudo(user)}
    userRole={user.role}
  />

  <section class="admin-panel">
    <div class="admin-panel__toolbar">
      <h2 class="admin-panel__title">Cursos</h2>
